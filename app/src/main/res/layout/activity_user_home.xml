<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_details_coordlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/activity_details_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="@dimen/toolbar_elevation">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/activity_details_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/transparent"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:expandedTitleMarginBottom="10dp"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <LinearLayout
                android:id="@+id/activity_userhome_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="55dp"
                android:paddingTop="30dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/activity_userhome_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:transitionName="@string/share_img3"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/activity_userhome_location"
                    android:layout_width="wrap_content"
                    android:textAppearance="@style/Toolbar_expanded_text"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar3"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/transparent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <com.neu.refresh.NeuSwipeRefreshLayout
        android:id="@+id/activity_userhome_swipelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:direction="both"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <cn.iwgang.familiarrecyclerview.FamiliarRecyclerView
            android:id="@+id/activity_userhome_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:frv_divider="@color/color_divideline"
            app:frv_dividerHeight="2dp"
            app:frv_itemViewBothSidesMargin="4dp"
            app:frv_layoutManager="linear"
            app:frv_layoutManagerOrientation="vertical" />
    </com.neu.refresh.NeuSwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>
