<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.NewLy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/card"
        android:orientation="horizontal"
        android:padding="5dp"
        android:tag="skin:card:background">

        <com.blanke.hold.HoldScaleImageView
            android:id="@+id/item_newly_booklike_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_newly_booklike_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="skin:text_color_hight:textColor"
                android:text="test"
                android:textColor="@color/text_color_hight" />

            <TextView
                android:id="@+id/item_newly_booklike_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="skin:text_color_hight:textColor"
                android:textColor="@color/text_color_hight" />

            <TextView
                android:id="@+id/item_newly_booklike_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:tag="skin:text_color:textColor"
                android:text="test"
                android:textColor="@color/text_color" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>