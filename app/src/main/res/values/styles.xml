<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlHighlight">@android:color/white</item>-->
        <!--<item name="android:colorPressedHighlight">@android:color/white</item>-->
        <!--<item name="colorButtonNormal">@color/colorAccent</item>-->
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textSize">13sp</item>
        <!--<item name="android:windowAnimationStyle">@style/ActivityAnim</item>-->
    </style>

    <style name="ActivityAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_enter</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseExitAnimation">@anim/normal</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="searchVoiceIcon">@mipmap/icon_shao</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SwipeBackTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="details_text_data">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:lines">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="details_text_head">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="text_head">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="Base.TextAppearance.AppCompat.Button"></style>

    <style name="TabLayout" parent="Base.Widget.Design.TabLayout"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar_expanded_text" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardView.Book" parent="CardView.Light">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <style name="CardView.Comment" parent="CardView.Book">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="CardView.NewLy" parent="CardView.Comment"></style>
</resources>
